<%-include('partials/header.ejs') %>

    <div class="container-tweet text-center">
        <div class="d-flex justify-content-between">
        <div class="createButton">
            
            <a class="btn btn-dark" href="/create">Create New Tweet</a>
        </div>
        <div class="createButton">
            <a class="btn btn-dark" href="/find">Find my Tweet</a>
        </div>
        </div>
        
        <div class="d-flex flex-column w-100" style="margin:auto"}>
            <%results.forEach((result)=>{%>
                <div class="card mt-3">
                    <div class="card-body">
                      <h5 class="card-title"><%= result.title %></h5>
                      <p class="card-text"><%= result.createdUser %></p>
                      <a href="/api/items/<%= result.id%>" class="btn btn-dark">Show tweet</a>
                    </div>
                  </div>
            <% }) %>
        </div>
    </div>

<%-include('partials/footer.ejs') %>
