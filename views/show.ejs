<%-include('partials/header.ejs') %>

    <div>
        <% results.forEach((result)=>{ %>
            <section class="container-tweet text-center">
                <div class="d-flex flex-column w-100" style="margin:auto" }>
                    <div class="image">
                        <img src="" alt="">
                    </div>
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= result.title %>
                            </h5>
                            <!-- <p class="card-text"><%= result.createdUser %></p> -->
                        </div>
                        <div class="d-flex justify-content-around">
                            <div>
                            <a href="/api/items/<%= result.id%>" class="btn btn-dark">Show tweet</a>
                            </div>
                            <form action="/api/edit/<%= result.id%>" method="get">
                                <button type="submit" class="btn btn-dark btn-block">Edit</button>
                            </form>
                            <form action="/api/delete/<%= result.id%>" method="post">
                                <button type="submit" class="btn btn-dark btn-block">Delete</button>
                            </form>
                            </div>
                    </div>
                    
                </div>
            </section>
        <% }) %>
    </div>


    <%-include('partials/footer.ejs')%>